@using SmartInventoryManagement.Models
@model Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="GuestName">Guest Name:</label>
        <input type="text" class="form-control" asp-for="GuestName" required />
    </div>

    <div class="form-group">
        <label for="GuestEmail">Guest Email:</label>
        <input type="email" class="form-control" asp-for="GuestEmail" required />
    </div>

    <h3>Ordered Products</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.OrderItems.Count; i++)
        {
            <tr>
                <td>
                    <input type="hidden" asp-for="OrderItems[i].Id" />
                    <input type="hidden" asp-for="OrderItems[i].ProductId" />
                    <input type="hidden" asp-for="OrderItems[i].Price" />
                    @Model.OrderItems[i].Product.Name
                </td>
                <td>
                    <input type="number" class="form-control" asp-for="OrderItems[i].Quantity" min="1" required />
                </td>
                <td>
                    @Model.OrderItems[i].Price.ToString("C")
                </td>
                <td>
                    <span>@(Model.OrderItems[i].Quantity * Model.OrderItems[i].Price)</span>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a href="@Url.Action("Index", "GuestOrders")" class="btn btn-secondary">Cancel</a>
</form>
