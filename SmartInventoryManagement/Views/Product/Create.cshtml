@model SmartInventoryManagement.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<h1>Create New Product</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p class="text-danger">@ViewBag.Message</p>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Add Category</a>
}
else
{
    <form id="createProductForm" method="post" asp-action="Create">
        <div class="form-group">
            <label for="Name">Product Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>

        <div class="form-group">
            <label for="Price">Price:</label>
            <input type="number" class="form-control" id="Price" name="Price" step="0.01" required />
        </div>

        <div class="form-group">
            <label for="QuantityInStock">Quantity in Stock:</label>
            <input type="number" class="form-control" id="QuantityInStock" name="QuantityInStock" required />
        </div>

        <div class="form-group">
            <label for="LowStockThreshold">Low Stock Threshold:</label>
            <input type="number" class="form-control" id="LowStockThreshold" name="LowStockThreshold" required />
        </div>

        <div class="form-group">
            <label for="CategoryId">Category:</label>
            <select class="form-control" id="CategoryId" name="CategoryId" required>
                <option value="">-- Select a Category --</option>
                @if (ViewBag.Categories is SelectList categories && categories.Any())
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
}

<script>
    $(document).ready(function() {
        // Get the URL for the Create Product action (this will be dynamically generated by Razor)
        var createProductUrl = '@Url.Action("Create", "Product")'; // Razor generates the correct URL

        // AJAX for Create Product Form submission
        $('form#createProductForm').submit(function(event) {
            event.preventDefault();
            var formData = $(this).serialize();

            // Show loader
            $('#loader').show();

            $.ajax({
                url: createProductUrl, // Use the Razor-generated URL for POST request
                type: 'POST',
                data: formData,
                success: function(response) {
                    $('#loader').hide();
                    if (response.success) {
                        alert(response.message); // Show success message
                        // Optionally update product list or redirect
                        $('#productListContainer').load('@Url.Action("Index", "Product")'); // Reload the product list
                    } else {
                        alert("Error creating product!");
                    }
                },
                error: function() {
                    $('#loader').hide();
                    alert('Error creating product!');
                }
            });
        });
    });
</script>
