@model SmartInventoryManagement.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>
<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
<p><strong>Category:</strong> @Model.Category?.Name</p>
<p><strong>Price:</strong> @Model.Price</p>
<p><strong>Quantity in Stock:</strong> @Model.QuantityInStock</p>
<p><strong>Low Stock Threshold:</strong> @Model.LowStockThreshold</p>

<form id="deleteProductForm" method="post" asp-action="Delete">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
</form>
