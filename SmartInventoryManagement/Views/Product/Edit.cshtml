@model SmartInventoryManagement.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

@if (ViewBag.Categories == null || !((SelectList)ViewBag.Categories).Any())
{
    <p class="text-danger">âš  No categories found. Please add categories first.</p>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Add Category</a>
}
else
{
    <form id="editProductForm" method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Name">Product Name:</label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>

        <div class="form-group">
            <label for="Price">Price:</label>
            <input type="number" class="form-control" asp-for="Price" step="0.01" required />
        </div>

        <div class="form-group">
            <label for="QuantityInStock">Quantity in Stock:</label>
            <input type="number" class="form-control" asp-for="QuantityInStock" required />
        </div>

        <div class="form-group">
            <label for="LowStockThreshold">Low Stock Threshold:</label>
            <input type="number" class="form-control" asp-for="LowStockThreshold" required />
        </div>

        <div class="form-group">
            <label for="CategoryId">Category:</label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option value="">-- Select a Category --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
    </form>
}
