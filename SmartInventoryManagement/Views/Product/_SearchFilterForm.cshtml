<form id="searchFilterForm" method="get" asp-action="Index">
    <div class="form-group">
        <label for="search">Search Products:</label>
        <input type="text" class="form-control" id="search" name="search" value="@ViewData["searchQuery"]" placeholder="Search by name" />
    </div>

    <div class="form-group">
        <label for="categoryFilter">Filter by Category:</label>
        @Html.DropDownList("categoryFilter",
            new SelectList(ViewBag.Categories as List<SmartInventoryManagement.Models.Category>, "Id", "Name", ViewData["categoryFilter"]),
            "--Select Category--",
            new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary" onclick="testAjax()">Filter</button>
</form>

@section Scripts {
    <script>
        function testAjax() {
            $.ajax({
                url: '/Home/TestLoader',
                method: 'GET'
            });
        }
    </script>
}