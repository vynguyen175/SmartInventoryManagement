@model IEnumerable<SmartInventoryManagement.Models.Product>

    <table class="table table-bordered mt-3">
    <thead>
    <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Low Stock Threshold</th>
    <th>Category</th>
    <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model ?? new List<SmartInventoryManagement.Models.Product>())
{
    <tr class="@(product.QuantityInStock == 0 ? "table-secondary" : (product.QuantityInStock <= product.LowStockThreshold ? "table-danger" : ""))">
        <td>@product.Name</td>
        <td>$@product.Price</td>
        <td>
        @if (product.QuantityInStock == 0)
    {
        <span class="badge bg-dark text-white">Out of Stock</span>
    }
    else
    {
        @product.QuantityInStock
        @if (product.QuantityInStock <= product.LowStockThreshold)
        {
            <span class="badge bg-warning text-dark ms-2">Low Stock!</span>
        }
    }
    </td>
        <td>@product.LowStockThreshold</td>
        <td>@product.Category?.Name</td>
        <td>
        <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-warning btn-sm">Edit</a>
        <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger btn-sm">Delete</a>
        </td>
        </tr>
}
</tbody>
    </table>

    @if (Model != null && Model.Any())
{
    <p><strong>Total Products:</strong> @Model.Count()</p>
}
else
{
    <p>No products found.</p>
}