@model ChangePasswordWithSecurityViewModel

@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Security Question:</label>
        <p><strong>@ViewBag.SecurityQuestion</strong></p>
    </div>

    <div class="form-group">
        <label asp-for="SecurityAnswer"></label>
        <input asp-for="SecurityAnswer" class="form-control" />
        <span asp-validation-for="SecurityAnswer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Change Password</button>
    <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}